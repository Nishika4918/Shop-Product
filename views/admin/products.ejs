<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <% if(prod.length > 0 ) { %>
            <div class="grid">
                <div class="row">
                <% for(let product of prod) {  %>
                    <article class="card product-item col-4">
                        <header class="card__header">
                            <h3 class="product__title">
                               <%= product.title%>
                            </h3>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.imageUrl%>" 
                            alt="book-img" style='width:100px;height:100px;'>
                        </div>
                        <div class="card__content">
                            <h4 class="product__price"><%= product.price%></h4>
                            <p class="product__description"> <%= product.description%></p>
                        </div>
                        <div class="card__action" style="display: flex;">
                            <a href="/admin/edit-product/<%= product.id %>?edit=true" class=" mx-3 btn shopbtn">Edit</a>
                            <input type="hidden" name='_csrf' value="<%= csrfToken %>">
                            <input type="hidden" name="id" value="<%= product.id %>">
                            <button class="btn shopbtn" type="button" onclick="deleteProduct(this)" >Delete</button>
                        </div>
                    </article>
                <% } %>
            </div>
            </div>
        <% } else {  %>
            <div class="noProduct">
                <h3>No Products!</h3>
            </div>
        <% } %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="/js/admin.js"></script>
<%- include('../includes/end.ejs') %>





