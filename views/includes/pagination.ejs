<div class="pagination">
    <% if(currentPage !== 1 && previousPage !== 1) {  %>
        <a href="?page=1">1</a>
    <% } %> 
    <% if(hasPreviousPage) {  %>
        <a href="?page=<%= previousPage %>" class="previous page"><%= previousPage %></a>
    <% } %>  
    <a href="?page=<%= currentPage %>" class="active"><%= currentPage %></a>  
    <% if(hasNextPage) {  %>
        <a href="?page=<%= nextPage %>" class="next page"><%= nextPage %></a>
    <% } %>    
    <% if(lastPage !== currentPage && nextPage !== lastPage) {  %>
        <a href="?page=<%= lastPage %>" class="last page"><%= lastPage %></a>
    <% } %> 
</div>